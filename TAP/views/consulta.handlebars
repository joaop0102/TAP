<style>
    button {
    color: #fff; 
    border: none; 
    border-radius: 10px; 
    padding: 10px 20px; 
    font-size: 15px; 
    cursor: pointer; 
    transition: background-color 0.3s ease; 
    margin-bottom: 10px;
    }
    .linha-style {
        border-bottom: 1px solid #ddd; 
        padding: 10px 0;
    }

    .linha-style:nth-child(even) {
        background-color: #f9f9f9;
    }

    .linha-style:nth-child(odd) {
        background-color: #ffffff; 
    }

    .col {
        padding: 5px; 
        text-align: center;
    }

    .editar {
        background-color: #ffd700;
        color: #000; 
        border-radius: 5px; 
        padding: 5px 10px; 
    }

    .excluir {
        background-color: #dc3545;
        color: #fff; 
        border-radius: 5px;
        padding: 5px 10px; 
    }

    .editar:hover, .excluir:hover {
        background-color: #316bc273; 
        color: #000;
    }
</style>
<div class="container text-center">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">SISTEMA WEB</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            <p class="text-start fs-5">Cadastrar - Agendamento de Potenciais Clientes</p>
            <p class="text-start fs-6">Sistema Utilizado para agendamento de serviços.</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">
                        <p>{{Posts.nome}}</p>
                    </div>
                    <div class="col text-light">
                        Telefone
                    </div>
                    <div class="col text-light">
                        Origem
                    </div>
                    <div class="col text-light">
                        Data de Contato
                    </div>
                    <div class="col text-light">
                        Observação
                    </div>
                    <div class="col text-light">
                        Ações
                    </div>
                </div>
                <div class="row">
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                    <div class="col text-light linha-style">
                        &nbsp;
                    </div>
                </div>
            {{#each posts}}
                {{#dataValues}}
            <div class="row">
                    <div class="col text-dark">
                        {{nome}}
                    </div>
                    <div class="col text-dark">
                        {{telefone}}
                    </div>
                    <div class="col text-dark">
                        {{origem}}
                    </div>
                    <div class="col text-dark">
                        {{data_contato}}
                    </div>
                    <div class="col text-dark">
                        {{observacao}}
                    </div>
                    <div class="col text-light">
                        <button class="editar" onclick="window.location.href='/atualiza/{{id}}'">
                            Editar
                        </button>
                        <button class="excluir" onclick="window.location.href='/excluir/{{id}}'">
                            Excluir
                        </button>
                    </div>
                </div>
                {{/dataValues}}
                {{/each}}
                </div>
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>